@model Model.EF.Question
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Question Detail</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">Question Detail</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Question Detail</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div>


                <div class="col-12">
                    <h4></h4>
                    <div class="post">
                        <div class="user-block">
                            <img class="img-circle img-bordered-sm" src="@Html.DisplayFor(model => model.Image)" alt="user image">
                            <span class="username">
                                Unit <a href="#"> @Html.DisplayFor(model => model.Unit)</a>
                            </span>
                            <span class="description"> @Html.DisplayFor(model => model.CourseName)</span>
                            <span class="description"> @Html.DisplayFor(model => model.CategoryQuestion)</span>
                        </div>
                        <!-- /.user-block -->
                        <p>
                            <h4>@Html.DisplayFor(model => model.Content)</h4>
                        </p>
                        <div class="quest-answer">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-4">
                                        <p>
                                            <label>

                                                <input name="" data-idquest="" type="radio" data-stt="" value="" />

                                                A. <span>@Html.DisplayFor(model => model.Answer1)</span>
                                            </label>
                                        </p>

                                        <p>
                                            <label>

                                                <input name="" data-idquest="" type="radio" data-stt="" value="" />

                                                C. <span>@Html.DisplayFor(model => model.Answer3)</span>
                                            </label>
                                        </p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>
                                            <label>

                                                <input name="" data-idquest="" type="radio" data-stt="" value="" />

                                                B. <span>@Html.DisplayFor(model => model.Answer2)</span>
                                            </label>
                                        </p>

                                        <p>
                                            <label>

                                                <input name="" data-idquest="" type="radio" data-stt="" value="" />

                                                D. <span>@Html.DisplayFor(model => model.Answer4)</span>
                                            </label>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <p>
                                <label>
                                    Đáp án đúng: <span style="color:red">@Html.DisplayFor(model => model.CorrectAnswer)</span>
                                </label>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card -->
        <p>
            @Html.ActionLink("Quay lại", "Index") |
            @Html.ActionLink("Cập nhật", "Edit", new { id = Model.ID })
        </p>
    </div>
</section>

