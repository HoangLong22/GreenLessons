@model Model.EF.Exam

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lesson Detail</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">Lesson Detail</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Exam Detail</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div>

               
                <div class="col-12">
                    <h4></h4>
                    <div class="post">
                        <div class="user-block">
                            <img class="img-circle img-bordered-sm" src="@Html.DisplayFor(model => model.Image)" alt="user image">
                            <span class="username">
                                <a href="#"> @Html.DisplayFor(model => model.Name)</a>
                            </span>
                            <span class="description"> @Html.DisplayFor(model => model.CourseName)</span>
                        </div>
                        <!-- /.user-block -->
                        <p>
                            @Html.Raw(Model.Content)
                        </p>


                    </div>
                </div>

               

            </div>
        </div>
        <!-- /.card -->
        <p>
            @Html.ActionLink("Quay lại", "Index") |
            @Html.ActionLink("Cập nhật", "Edit", new { id = Model.ID })

        </p>
    </div>
</section>